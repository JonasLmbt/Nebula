{
  "name": "nebula",
  "version": "1.0.3",
  "description": "Nebula â€” a lightweight Bedwars stats overlay.",
  "main": "dist/main.js",
  "author": "Jonas Lambrecht",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc && mkdir dist\\renderer 2> NUL && copy /Y src\\renderer\\index.html dist\\renderer\\index.html",
    "dist": "npm run build && electron-builder --publish always",
    "start": "npm run build && \"node_modules/.bin/electron.cmd\" .",
    "dev": "npm run build && \"node_modules/.bin/electron.cmd\" . --enable-logging"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/node-fetch": "^2.6.13",
    "@types/tail": "^2.2.3",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "electron-updater": "^6.6.2",
    "firebase": "^12.5.0",
    "node-fetch": "^2.6.7",
    "tail": "^2.2.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JonasLmbt/Nebula.git"
  },
  "build": {
    "appId": "com.jonaslmbt.nebula",
    "productName": "Nebula",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json",
      "!**/*.map",
      "!src/**/*",
      "!node_modules/.cache/**/*"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "JonasLmbt",
        "repo": "Nebula"
      }
    ]
  }
}
